{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2022"],
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@hiveAI/core": ["core/src"],
            "@hiveAI/adapters-*": ["adapters/*/src"],
            "@hiveAI/services-*": ["services/*/src"]
        }
    },
    "include": [
        "start_hive_swarm.ts",
        "services/**/*.ts",
        "adapters/**/*.ts",
        "core/**/*.ts",
        "utils/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
} 