{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@hiveai/plugin-*": ["plugins/*/src"],
        "@hiveai/*": ["*/src"]
      },
      "composite": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
        { "path": "./plugins/trustdb" },
        { "path": "./plugins/solana" },
        { "path": "./utils" }
    ]
  }